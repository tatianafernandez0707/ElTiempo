@model List<TbUser>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">Lista de usuarios</div>
    <div class="card-body">
        <a asp-action="Guardar" asp-controller="User" class="btn btn-success">Crear nuevo</a>
        <br/>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Nombres completos:</th>
                    <th>Usuario:</th>
                    <th>Correo electronico:</th>
                    <th>Fecha creación usuario:</th>
                    <th>Fecha actualización:</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.FullName</td>
                        <td>@item.UserName</td>
                        <td>@item.Email</td>
                        <td>@item.CreateDate</td>
                        <td>@item.UpdateDate</td>
                        <td>
                            <a asp-action="Editar" asp-controller="User" class="btn btn-primary btn-sm" asp-route-idUser="@item.IdUser">Editar</a>
                            <a asp-action="Eliminar" asp-controller="User" class="btn btn-danger btn-sm" asp-route-idUser="@item.IdUser">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
